<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_scraper_log_tree" model="ir.ui.view">
        <field name="name">scraper.log.tree</field>
        <field name="model">scraper.log</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="created_at"/>
                <field name="store_data_id"/>
                <field name="scraper_store_id"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="view_scraper_log_form" model="ir.ui.view">
        <field name="name">scraper.log.form</field>
        <field name="model">scraper.log</field>
        <field name="arch" type="xml">
            <form string="Scraper Log">
                <header>
                    <button name="validate_pre_store_data"
                        type="object"
                        string="Validate Data"
                        class="btn-primary"/>
                    <button name="generate_store_data"
                        type="object"
                        string="Generate Store Data"
                        class="btn-primary"/>
                    <button
                        name="action_generate_excel"
                        type="object"
                        string="Generate Excel"
                        class="btn-primary"
                    />

                    <field name="status" widget="statusbar"/>
                </header>

                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="scraper_store_id"/>
                            <field name="store_request_id"/>
                            <field name="processed"/>
                            <field name="created_at"/>
                        </group>
                        <group>
                            <field name="mapping_id"/>
                            <field name="store_data_id"/>
                            <field name="excel_file" filename="excel_filename" readonly="1"/>
                            <field name="excel_filename" invisible="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Response JSON">
                            <field name="response_json" widget="text"/>
                        </page>

                        <page string="Request Payload" invisible="1">
                            <field name="request_payload" widget="text" readonly="1"/>
                        </page>

                        <page string="Error">
                            <field name="error_message" widget="text" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_scraper_log" model="ir.actions.act_window">
        <field name="name">Scraper Logs</field>
        <field name="res_model">scraper.log</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
