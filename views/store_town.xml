<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_store_town_tree" model="ir.ui.view">
        <field name="name">scraper.store.town.tree</field>
        <field name="model">scraper.store.town</field>
        <field name="arch" type="xml">
            <tree string="Town List">
                <field name="scraper_store_ids" widget="many2many_tags"/>
                <field name="name"/>
                <field name="company_id" />
                <field name="country_id" />
                <field name="state_id" />
                <field name="town_id" />
                <field name="town_district_id"/>
                <field name="address" />
                <field name="zip_code" />
                <field name="status" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="view_store_town_form" model="ir.ui.view">
        <field name="name">scraper.store.town.form</field>
        <field name="model">scraper.store.town</field>
        <field name="arch" type="xml">
            <form string="Town List">   
                <header>
                    <button name="adress_filtering" type="object" string="Adress Filtering" />  
                    <button name="towns_create" type="object" string="Town Create" />

                    <field name="status" widget="statusbar"
                           statusbar_visible="draft,verified" options="{'clickable': '1'}"/>                
                </header>             
                <sheet> 
                    <div class='oe_button_box'  name="button_box">
                        <button
                            name="action_view_products"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-database">
                            <div class="o_stat_info"> 
                                 <span class="o_stat_value">
                                    <field name="product_count"/>
                                </span>                          
                                <span class="o_stat_text">
                                    Product Data
                                </span>
                           </div>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="scraper_store_ids" widget="many2many_tags"/>
                            <field name="company_id" />
                            <field name="name"/>                            
                        </group>
                        <group>
                            <field name="town_name" invisible="1" />
                            <field name="town_id" />
                            <field name="address" />
                            <field name="zip_code" />
                            <field name="town_district_id"/>
                            <field name="state_id" />
                            <field name="country_id" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Address Filtering">
                            <field name="address_prompt" widget="text"/>
                        </page>
                    </notebook>
       
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_scraped_address_search" model="ir.ui.view">
        <field name="name">scraper.store.town.search</field>
        <field name="model">scraper.store.town</field>
        <field name="arch" type="xml">
            <search string="Store Towns">

                <group expand="1" string="Group By">                       
                    <filter string="Towns"
                            name="group_by_towns"
                            context="{'group_by': 'town_id'}"/>
                     <filter string="Competitor Store"
                            name="group_by_compititor_store"
                            context="{'group_by': 'scraper_store_ids'}"/>
                </group>
            </search>
        </field>      
    </record>

    <record id="action_store_town" model="ir.actions.act_window">
        <field name="name">Competitor Store Address</field>
        <field name="res_model">scraper.store.town</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{"search_default_group_by_towns" : 1,"search_default_group_by_compititor_store" : 1}</field>
    </record>

</odoo>
