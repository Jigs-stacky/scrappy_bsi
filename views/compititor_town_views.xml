<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_towns_tree" model="ir.ui.view">
        <field name="name">compititor.store.towns.tree</field>
        <field name="model">compititor.store.towns</field>
        <field name="arch" type="xml">
            <tree string="Town List">               
                <field name="name"/>             
            </tree>
        </field>
    </record>

    <record id="view_towns_form" model="ir.ui.view">
        <field name="name">compititor.store.towns.form</field>
        <field name="model">compititor.store.towns</field>
        <field name="arch" type="xml">
            <form string="Town List">                           
                <sheet> 
                    <group>                        
                        <field name="name"/>                            
                    </group>                    
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_towns" model="ir.actions.act_window">
        <field name="name">Competitor Towns</field>
        <field name="res_model">compititor.store.towns</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
