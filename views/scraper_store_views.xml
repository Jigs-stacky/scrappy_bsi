<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_scraper_store_tree" model="ir.ui.view">
        <field name="name">scraper.store.tree</field>
        <field name="model">scraper.store</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="url"/>
            </tree>
        </field>
    </record>

    <record id="view_scraper_store_form" model="ir.ui.view">
        <field name="name">scraper.store.form</field>
        <field name="model">scraper.store</field>
        <field name="arch" type="xml">
            <form string="Competitor Store">
                <header>
                    <button name="scraper_store_domain" 
                        string="Scrapping Store Domain" 
                        type="object" 
                        class="oe_highlight" invisible="data_type == 'manual'"/>
                </header>
                <sheet>
                    <group>
                        <field name="data_type"/>
                        <field name="name"/>
                        <field name="url"/>
                        <field name="domain" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_scraper_store" model="ir.actions.act_window">
        <field name="name">Competitor Store</field>
        <field name="res_model">scraper.store</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
