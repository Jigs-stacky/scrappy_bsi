<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Import Wizard Form -->
    <record id="view_import_address_wizard_form" model="ir.ui.view">
        <field name="name">import.address.wizard.form</field>
        <field name="model">import.address.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Address from Excel">
                <group>
                    <field name="file" filename="file_name"/>
                    <field name="file_name" invisible="1"/>
                </group>

                <footer>
                    <button name="action_import"
                            type="object"
                            string="Import"
                            class="btn-primary"/>
                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
<record id="action_import_address_wizard" model="ir.actions.act_window">
    <field name="name">Import Address</field>
    <field name="res_model">import.address.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
</record>

</odoo>
